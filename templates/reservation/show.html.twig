{% extends 'base.html.twig' %}

{% block title %}Détails de la Réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Détails de la Réservation</h1>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ reservation.id }}</td>
                    </tr>
                    <tr>
                        <th>Ressource</th>
                        <td>{{ reservation.resource.name }}</td>
                    </tr>
                    <tr>
                        <th>Réservé par</th>
                        <td>{{ reservation.reservedBy.email }}</td>
                    </tr>
                    <tr>
                        <th>Début</th>
                        <td>{{ reservation.startTime ? reservation.startTime|date('Y-m-d H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fin</th>
                        <td>{{ reservation.endTime ? reservation.endTime|date('Y-m-d H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Motif</th>
                        <td>{{ reservation.purpose }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>
                            {% if reservation.status == 'pending' %}
                                <span class="badge bg-info text-dark">En attente</span>
                            {% elseif reservation.status == 'approved' %}
                                <span class="badge bg-success">Approuvé</span>
                            {% elseif reservation.status == 'rejected' %}
                                <span class="badge bg-danger">Rejeté</span>
                            {% elseif reservation.status == 'cancelled' %}
                                <span class="badge bg-secondary">Annulé</span>
                            {% else %}
                                <span class="badge bg-light text-dark">{{ reservation.status }}</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Créée le</th>
                        <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Mise à jour le</th>
                        <td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary btn-lg">Retour à la liste</a>
            <div>
                {# Ne pas oublier de rajouter l'objet Reservation en second paramètre de is_granted() #}
                {% if is_granted('RESERVATION_EDIT', reservation) %}
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning btn-lg me-2">Modifier</a>
                {% endif %}

                {% if is_granted('RESERVATION_DELETE', reservation) %}
                    {{ include('reservation/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
