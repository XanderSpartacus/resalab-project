{% extends 'base.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des Réservations</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered text-center">
                <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ressource</th>
                    <th>Réservé par</th>
                    <th>Début</th>
                    <th>Fin</th>
                    <th>Motif</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td>{{ reservation.resource.name }}</td>
                        <td>{{ reservation.reservedBy.email }}</td>
                        <td>{{ reservation.startTime ? reservation.startTime|date('Y-m-d H:i') : '' }}</td>
                        <td>{{ reservation.endTime ? reservation.endTime|date('Y-m-d H:i') : '' }}</td>
                        <td>{{ reservation.purpose }}</td>
                        <td>
                            {% if reservation.status == 'pending' %}
                                <span class="badge bg-info text-dark">En attente</span>
                            {% elseif reservation.status == 'approved' %}
                                <span class="badge bg-success">Approuvé</span>
                            {% elseif reservation.status == 'rejected' %}
                                <span class="badge bg-danger">Rejeté</span>
                            {% elseif reservation.status == 'cancelled' %}
                                <span class="badge bg-secondary">Annulé</span>
                            {% else %}
                                <span class="badge bg-light text-dark">{{ reservation.status }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {# Ne pas oublier de rajouter l'objet Reservation en second paramètre de is_granted() #}
                            {% if is_granted('RESERVATION_VIEW', reservation) %}
                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-info btn-sm me-1" title="Voir">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            {% endif %}

                            {% if is_granted('RESERVATION_EDIT', reservation) %}
                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning btn-sm me-1" title="Modifier">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {% endif %}

                            {% if is_granted('RESERVATION_DELETE', reservation) %}
                            {# Le bouton de suppression sera géré via un formulaire séparé pour la sécurité CSRF #}
                                {{ include('reservation/_delete_form.html.twig', {'reservation': reservation}) }}
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucune réservation trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            {% if is_granted('RESERVATION_CREATE') %}
                <a href="{{ path('app_reservation_new') }}" class="btn btn-primary btn-lg">Créer une nouvelle réservation</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
