{% extends 'base.html.twig' %}

{% block title %}{{ 'about.title'|trans }}{% endblock %}

{% block body %}

    {# Section Hero #}
    <div class="position-relative">
        <img src="{{ asset('images/lab.png') }}"
             alt="Laboratoire moderne"
             class="w-100"
             style="height: 350px; object-fit: cover; filter: brightness(65%);">

        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="fw-bold display-5">{{ 'about.hero.title'|trans }}</h1>
            <p class="lead">{{ 'about.hero.subtitle'|trans }}</p>
        </div>
    </div>

    {# Section Contenu #}
    <div class="container my-5">

        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="p-4 p-lg-5 bg-white shadow-sm rounded-4 border">
                    <h2 class="mb-4 text-primary fw-semibold">{{ 'about.mission.title'|trans }}</h2>

                    <p class="fs-5">
                        {{ 'about.mission.p1'|trans|raw }}
                    </p>

                    <p class="fs-5">
                        {{ 'about.mission.p2'|trans }}
                    </p>

                    <p class="fs-5">
                        {{ 'about.mission.p3'|trans }}
                    </p>

                    <hr class="my-4">

                    <div class="text-center">
                        <a href="{{ path('app_resource_index') }}" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">
                            {{ 'about.explore_resources_button'|trans }}
                        </a>
                    </div>

                </div>

            </div>
        </div>

    </div>

{% endblock %}
