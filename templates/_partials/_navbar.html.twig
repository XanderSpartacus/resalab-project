<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_main') }}">
            <img src="{{ asset('images/logo.svg') }}" alt="Logo ResaLab" height="30"
                 class="d-inline-block align-text-top me-2">
            ResaLab
        </a>
        {# {{ dump(app.request) }} #}
        {# Autre syntaxe pour checker si une route commence par une chaine #}
        {# {{ app.request.get('_route') starts with 'admin' ? 'active' : '' }} #}
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'app_main' ? 'active' : '' }}"
                       aria-current="page" href="{{ path('app_main') }}">{{ 'nav.home'|trans }}</a>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_reservation_index' ? 'active' : '' }}"
                           href="{{ path('app_reservation_index') }}">
                            {% if is_granted('ROLE_ADMIN') %}
                                {{ 'nav.reservations_admin'|trans }}
                            {% else %}
                                {{ 'nav.reservations_user'|trans }}
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'app_resource_index' ? 'active' : '' }}"
                           href="{{ path('app_resource_index') }}">
                            {% if is_granted('ROLE_ADMIN') %}
                                {{ 'nav.resources_admin'|trans }}
                            {% else %}
                                {{ 'nav.resources_user'|trans }}
                            {% endif %}
                        </a>
                    </li>
                {% endif %}

            </ul>
            <ul class="navbar-nav ms-auto">

                {# On ajoute le sélecteur de langue dans l'interface #}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe"></i> {{ app.request.locale|upper }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                        <li>
                            <a class="dropdown-item {% if app.request.locale == 'fr' %}active{% endif %}"
                               href="{{ path(app.request.attributes.get('_route') ?: 'app_main', app.request.attributes.get('_route_params')|merge({'_locale': 'fr'})) }}">
                                Français (FR)
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item {% if app.request.locale == 'en' %}active{% endif %}"
                               href="{{ path(app.request.attributes.get('_route') ?: 'app_main', app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">
                                English (EN)
                            </a>
                        </li>
                    </ul>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">Bonjour {{ app.user.userIdentifier }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">{{ 'nav.logout'|trans }}</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">{{ 'nav.login'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">{{ 'nav.register'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>

    </div>
</nav>
