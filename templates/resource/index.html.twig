{% extends 'base.html.twig' %}

{% block title %}Liste des ressources{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des ressources</h1>
            {# On ajoute la condition #}
            {% if is_granted('RESOURCE_CREATE') %}
                <a href="{{ path('app_resource_new') }}" class="btn btn-primary">Ajouter une ressource</a>
            {% endif %}
        </div>

        <div class="card mt-4">
            <div class="card-header">
                Filtres
            </div>
            <div class="card-body">
                <form method="get" action="{{ path('app_resource_index') }}" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="category" class="form-label">Filtrer par catégorie</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">Toutes les catégories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}" {{ category.id == selectedCategoryId ? 'selected' : '' }}>{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Filtrer</button>
                        <a href="{{ path('app_resource_index') }}" class="btn btn-secondary">Réinitialiser</a>
                    </div>
                </form>
            </div>
        </div>

        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Catégorie</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Créée le</th>
                    <th>Mis à jour</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for resource in resources %}
                    <tr>
                        <td>{{ resource.id }}</td>
                        <td>{{ resource.category.name }}</td>
                        <td>{{ resource.name }}</td>
                        <td>{{ resource.description }}</td>
                        <td>{{ resource.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ resource.updatedAt|date('Y-m-d H:i:s') }}</td>
                        <td>
                            {# On ajoute la condition #}
                            {% if is_granted('RESOURCE_VIEW', resource) %}
                                <a href="{{ path('app_resource_show', { id: resource.id }) }}" class="btn btn-sm btn-info" title="Voir la ressource">
                                    <i class="fas fa-edit"></i> Voir
                                </a>
                            {% endif %}

                            {% if is_granted('RESOURCE_EDIT', resource) %}
                                <a href="{{ path('app_resource_edit', { id: resource.id }) }}" class="btn btn-sm btn-secondary" title="Modifier la ressource">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            {% endif %}

                            {% if is_granted('RESOURCE_DELETE', resource) %}
                                <form method="post" action="{{ path('app_resource_delete', { id: resource.id }) }}" onsubmit="return confirm('Êtes-vous sur de vouloir supprimer cette ressource ?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ resource.id) }}">
                                    <button class="btn btn-sm btn-danger" aria-label="Supprimer la ressource">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7">Aucune ressource pour l'instant.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
